<h1 class="centered-heading">You can read some blogs here:</h1>
<div class="container">
  <% @contents.each do |content| %>
    <div class="card">
      <%= link_to content_path(content), class: 'card-link' do %>
        <div class="card-body">
          <h5 class="card-title"><%= content.title %></h5>
          <p class="card-text">Some description or content here...</p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<hr>
    <h1 class="centered-heading"><%= @mood.category.name %>  tracks for a <%=@mood.feeling%> feeling</h1>
<div class="container">
    <div class="cards">
  <% @songs.each do |song| %>
    <%# <div class="card-category"> %>
      <% if song[:preview_url] %>
        <p>Preview:</p>
        <audio controls>
          <source src="<%= song[:preview_url] %>" type="audio/mpeg">
          Your browser does not support the audio element.
        </audio>
      <% end %>
      <iframe src="<%= song[:embed_url] %>" width="300" height="80" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
    <%# </div> %>
  <% end %>
    </div>
</div>
