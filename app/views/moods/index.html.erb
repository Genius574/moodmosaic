<div class="container-mosaic d-flex p-3 justify-content-between align-items-center">
  <h1> Your past activities</h1>
  <div class="logging">
    <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
  </div>
</div>

<div class="moods-container row">
  <% @moods.each_slice(2) do |mood_pair| %>
    <div class="d-flex justify-content-between mb-3">
      <% mood_pair.each do |mood| %>
        <!--<div class="mosaic-card col-md-3">-->
          <div class="<%= class_names('mosaic-card', 'col-md-3', "mosaic-card--#{mood.feeling}") %>">
          <div class="mosaic-feeling">
            <%= mood.mood_icon.html_safe %>
          </div>

          <div class="mosaic-details">
          <!--<div class="<%#= class_names('mosaic-details', "mosaic-details--#{mood.feeling}")%>">-->
         <p class="mosaic-date"><%= mood.created_at.strftime("%B %d, %Y") %></p>
            <div class="category-icon">
              <%= mood.category&.category_icon&.html_safe %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
